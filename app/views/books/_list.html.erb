


    <div class="col-md-3">
      <table class="table table-striped">
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image %>
        <p>name: <%= @user.name %></p>
        <p>introduction: <%= @user.introduction %></p>
        <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      </table>
        <h1>New book</h1>
          <%= form_with model: book, url: '/books', method: :post do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
