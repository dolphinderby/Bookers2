
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
        <div class="row">
          <p class="btn btn-outline-secondary btn-block">
          <%= link_to edit_user_path(@user) do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
          </p>
        </div>
        <h1>New book</h1>
          <%= form_with model: book, url: '/books', method: :post do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
          <% end %>
    </div>
