<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <%= render 'books/list', book: @books, user: @users %>
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <% @books.each do |book| %>
          <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image %>
          <% end %>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
          <p>Opinion: <%= book.body %></p>
        <% end %>
      </div>
  </div>
</div>