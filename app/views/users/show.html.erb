<div>
  <h2>User info</h2>
  
  <h3><%= @user.name %></h3>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p>投稿ユーザー画像: <%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム: <%= book.user.name %></p>
  <p>Title: <%= book.book_name %></p>
  <p>Opinion: <%= book.caption %></p>
</div>
<% end %>